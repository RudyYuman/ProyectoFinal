@model IEnumerable<Entity_Layer.EmpleadoBO>

@{
    ViewBag.Title = "Listar";
}

<h2>Listar</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Insertar")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id_EMPLEADO)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FECHA_CONTRATACION)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ID_ESTADO_EMPLEADO)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ID_PUESTO_TRABAJADOR)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FECHA_BAJA)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id_EMPLEADO)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FECHA_CONTRATACION)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ID_ESTADO_EMPLEADO)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ID_PUESTO_TRABAJADOR)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FECHA_BAJA)
        </td>
        <td>
            @Html.ActionLink("Editar", "Actualizar", new { ID = item.Id_EMPLEADO }) |
            @Html.ActionLink("Borrar", "Eliminar", new { ID = item.Id_EMPLEADO })
        </td>
    </tr>
}

</table>
