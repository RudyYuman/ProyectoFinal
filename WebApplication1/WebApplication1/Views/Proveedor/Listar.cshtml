@model IEnumerable<Entity_Layer.ProveedorBO>

@{
    ViewBag.Title = "Listar";
}

<h2>Listar</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Insertar")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ID_PROVEEDOR)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DIRECCION)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ID_ESTADO_PRODUCTO)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ID_PUESTO_PROVEEDOR)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ID_PROVEEDOR)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DIRECCION)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ID_ESTADO_PRODUCTO)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ID_PUESTO_PROVEEDOR)
        </td>
        <td>
            @Html.ActionLink("Editar", "Actualizar", new { ID = item.ID_PROVEEDOR }) |
            
            @Html.ActionLink("Borrar", "ELiminar", new { ID = item.ID_PROVEEDOR })
        </td>
    </tr>
}

</table>
